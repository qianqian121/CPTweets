<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.apps.codepathtweets.activities.ProfileActivity">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.codepath.apps.codepathtweets.fragments.UserTimelineFragment"
        android:id="@+id/fragmentUserTimeline"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        tools:layout="@layout/fragment_tweets_list"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragmentUserHeader" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.codepath.apps.codepathtweets.fragments.UserHeaderFragment"
        android:id="@+id/fragmentUserHeader"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:layout="@layout/fragment_user_header"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
